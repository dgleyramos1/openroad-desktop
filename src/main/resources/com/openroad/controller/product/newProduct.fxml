         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="300.0" spacing="10.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="72.0" text="Nome:" textFill="WHITE">
                     <font>
                        <Font name="Fira Code Regular" size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="inputNameProduct" focusTraversable="false" prefHeight="27.0" prefWidth="270.0" styleClass="input" stylesheets="@../../styles/login.css">
                     <font>
                        <Font name="Fira Code Regular" size="13.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="351.0" spacing="10.0">
               <children>
                  <Label prefWidth="72.0" text="Descrição" textFill="WHITE">
                     <font>
                        <Font name="Fira Code Regular" size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="inputDescriptionProduct" focusTraversable="false" prefHeight="50.0" prefWidth="270.0" styleClass="input" stylesheets="@../../styles/login.css">
                     <font>
                        <Font name="Fira Code Regular" size="13.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="200.0" spacing="29.0">
