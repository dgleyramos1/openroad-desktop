<AnchorPane prefHeight="233.0" prefWidth="400.0" styleClass="anchor" stylesheets="@../../styles/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.openroad.controller.product.ProductNewController">
   <children>
